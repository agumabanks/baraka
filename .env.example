# Environment Configuration for Docker Compose
# Copy this file to .env and customize for your environment

# Application Environment
APP_ENV=local
APP_DEBUG=1
APP_KEY=base64:generated-key-here

# Database Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=courier
MYSQL_USER=courier
MYSQL_PASSWORD=password

# Redis Configuration
REDIS_PASSWORD=

# Mail Configuration
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@courier.com
MAIL_FROM_NAME="${APP_NAME}"

# Frontend Configuration
VITE_API_BASE_URL=http://localhost/api
VITE_WEBSOCKET_URL=ws://localhost:6001
NODE_ENV=development

# Monitoring & Observability
GRAFANA_PASSWORD=admin

# Object Storage (MinIO/S3)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
S3_BUCKET=courier-files

# AWS Configuration (for production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-1
AWS_USE_PATH_STYLE_ENDPOINT=false

# Security & Compliance
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-32-character-encryption-key

# Performance & Scaling
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1024
MAX_EXECUTION_TIME=300
MEMORY_LIMIT=512M

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Monitoring
PROMETHEUS_RETENTION=200h
GRAFANA_RETENTION=30d

# Security Headers
SECURE_COOKIES=false
TRUSTED_PROXIES=

# API Rate Limiting
API_RATE_LIMIT=60
API_RATE_WINDOW=1

# Session Configuration
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Cache Configuration
CACHE_PREFIX=courier_cache
QUEUE_PREFIX=courier_queue

# WebSocket Configuration
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=6001
WEBSOCKET_PATH=/app

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Logging Configuration
LOG_LEVEL=debug
LOG_CHANNEL=stack
LOG_MAX_FILES=30

# Timezone
TZ=UTC

# Locale
LOCALE=en
FALLBACK_LOCALE=en

# Development Tools
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# Performance Monitoring
APM_ENABLED=false
APM_SERVICE_NAME=courier-app
APM_ENVIRONMENT=local

# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years
ANONYMIZATION_ENABLED=true

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555

# File Upload
MAX_FILE_SIZE=50M
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# Rate Limiting per User Type
API_RATE_LIMIT_ADMIN=1000
API_RATE_LIMIT_MANAGER=500
API_RATE_LIMIT_USER=100
API_RATE_LIMIT_ANON=10